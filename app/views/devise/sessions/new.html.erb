<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-group"><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, class: "form-control" %></div>

  <div class="form-group"><%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> Remember me</div>
  <% end -%>

  <%= f.submit "Sign in", class: "btn btn-default btn-lg btn-block" %>
<% end %>

<hr>

<%= render "devise/shared/links" %>
